{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es5",
      "es2015"
    ],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationDir": "./types",
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedParameters": true,
    "rootDir": "./"
  }
}
